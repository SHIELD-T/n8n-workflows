  "nodes": [
    {
      "id": "webhook-trigger-3",
      "name": "API Error Webhook",
      "type": "n8n-nodes-base.webhook",
      "position": [
        100,
        100
      ],
      "parameters": {
        "path": "api-error",
        "httpMethod": "POST"
      }
    },
    {
      "id": "error-analysis-3",
      "name": "Analyze Error",
      "type": "n8n-nodes-base.set",
      "position": [
        300,
        100
      ],
      "parameters": {
        "assignments": {
          "assignments": [
            {
              "name": "error_type",
              "value": "={{ $json.error_type || 'UNKNOWN' }}"
            },
            {
              "name": "error_message",
              "value": "={{ $json.error_message || 'No error message provided' }}"
            },
            {
              "name": "error_code",
              "value": "={{ $json.error_code || 'N/A' }}"
            },
            {
              "name": "error_time",
              "value": "={{ $now }}"
            },
            {
              "name": "severity",
              "value": "={{ $json.severity || 'MEDIUM' }}"
            }
          ]
        }
      }
    },
    {
      "id": "severity-check-3",
      "name": "Check Severity",
      "type": "n8n-nodes-base.if",
      "position": [
        500,
        100
      ],
      "parameters": {
        "conditions": {
          "string": [
            {
              "value1": "={{ $json.severity }}",
              "operation": "equal",
              "value2": "HIGH"
            }
          ]
        }
      }
    },
    {
      "id": "high-severity-3",
      "name": "High Severity Alert",
      "type": "n8n-nodes-base.set",
      "position": [
        700,
        100
      ],
      "parameters": {
        "assignments": {
          "assignments": [
            {
              "name": "alert_type",
              "value": "HIGH_SEVERITY"
            },
            {
              "name": "alert_message",
              "value": "üö® HIGH SEVERITY ERROR ALERT\n\n*Error Type:* {{ $json.error_type }}\n*Error Code:* {{ $json.error_code }}\n*Error Message:* {{ $json.error_message }}\n*Time:* {{ $json.error_time }}"
            },
            {
              "name": "alert_sent",
              "value": "={{ $now }}"
            }
          ]
        }
      }
    },
    {
      "id": "medium-severity-3",
      "name": "Medium Severity Alert",
      "type": "n8n-nodes-base.set",
      "position": [
        700,
        300
      ],
      "parameters": {
        "assignments": {
          "assignments": [
            {
              "name": "alert_type",
              "value": "MEDIUM_SEVERITY"
            },
            {
              "name": "alert_message",
              "value": "‚ö†Ô∏è MEDIUM SEVERITY ERROR\n\n*Error Type:* {{ $json.error_type }}\n*Error Code:* {{ $json.error_code }}\n*Error Message:* {{ $json.error_message }}\n*Time:* {{ $json.error_time }}"
            },
            {
              "name": "alert_sent",
              "value": "={{ $now }}"
            }
          ]
        }
      }
    },
    {
      "id": "log-error-3",
      "name": "Log Error",
      "type": "n8n-nodes-base.set",
      "position": [
        900,
        100
      ],
      "parameters": {
        "assignments": {
          "assignments": [
            {
              "name": "log_entry",
              "value": "={{ { \"error_type\": $json.error_type, \"error_code\": $json.error_code, \"error_message\": $json.error_message, \"severity\": $json.severity, \"timestamp\": $json.error_time, \"alert_sent\": $json.alert_sent } }}"
            },
            {
              "name": "logged_at",
              "value": "={{ $now }}"
            }
          ]
        }
      }
    },
    {
      "id": "send-alert-3",
      "name": "Send Alert",
      "type": "n8n-nodes-base.set",
      "position": [
        1100,
        100
      ],
      "parameters": {
        "assignments": {
          "assignments": [
            {
              "name": "alert_delivered",
              "value": "={{ $now }}"
            },
            {
              "name": "alert_status",
              "value": "delivered"
            }
          ]
        }
      }
    }
  ],
